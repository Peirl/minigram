<%= form_with(model: gram, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title , class: 'form-control', placeholder: "Title"%>
  </div>
  <div class="form-group">
    <%= form.label :content%>
    <%= form.text_area :content, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= form.label :location%>
    <%= form.text_field :location, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= form.label :country_code%>
    <%= form.country_select :country_code, {include_blank: true, priority_countries: ["SG", "MY"]}, {class: 'form-control'}%>
  </div>

  <div>
    <%= form.hidden_field :image_url, role: 'uploadcare-uploader', data: {crop: '600:600', 'images-only' => true} %>
  </div>

  <% if gram.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gram.errors.count, "error") %> prohibited this gram from being saved:</h2>

      <ul>
      <% gram.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit class:'btn btn-success' %>
  </div>
<% end %>
