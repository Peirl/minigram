<%= form_with(model: gram, local: true) do |form| %>
  <div>
    <%= form.hidden_field :image_url, role: 'uploadcare-uploader', data: {crop: '600:600', 'images-only' => true} %>
  </div>

  <%= form.label :title %>
  <%= form.text_field :title%>
  <%= form.label :content%>
  <%= form.text_area :content%>
  <%= form.label :location%>
  <%= form.text_field :location%>
  <%= form.label :country_code%>
  <%= form.country_select :country_code, include_blank: true, priority_countries: ["SG", "MY"]%>


  <% if gram.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gram.errors.count, "error") %> prohibited this gram from being saved:</h2>

      <ul>
      <% gram.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
