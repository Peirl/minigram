<p id="notice"><%= notice %></p>

<h1>Grams</h1> <%= link_to 'New Gram', new_gram_path , class:"btn btn-success"%>


<div class="row">
  <div class="col-xs-1 col-sm-1 col-md-1">Title</div>
  <div class="col-xs-1 col-sm-1 col-md-1">Content</div>
  <div class='col-xs-1 col-sm-1 col-md-1'>Location</div>
  <div class='col-xs-1 col-sm-1 col-md-1'>Country</div>
  <div class='col-xs-5 col-sm-5 col-md-5'>Image</div>
  <div class='col-xs-1 col-sm-1 col-md-1'>Show</div>
  <div class='col-xs-1 col-sm-1 col-md-1'>Edit</div>
  <div class='col-xs-1 col-sm-1 col-md-1'>Destroy</div>
</div>

<% @grams.each do |gram| %>
  <div class="row">
    <div class="col-xs-1"><%= gram.title%></div>
    <div class="col-xs-1"><%= gram.content%></div>
    <div class="col-xs-1"><%= gram.location%></div>
    <div class="col-xs-1"><%= country_name(gram.country_code)%></div>
    <div class="col-xs-5"><%= image_tag gram.image_url, class:"img-responsive" unless gram.image_url.nil? %></div>
    <div class="col-xs-1"><%= link_to 'Show', gram, class: "btn btn-primary" %></div>
    <div class="col-xs-1"><%= link_to 'Edit', edit_gram_path(gram) , class: "btn btn-warning"%></div>
    <div class="col-xs-1"><%= link_to 'Destroy', gram, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%></div>
  </div>
<% end %>

<br>
<div class="text-center">
  <%= paginate @grams%>
</div>
